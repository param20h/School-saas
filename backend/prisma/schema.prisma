// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum FeeStatus {
  PAID
  PENDING
  OVERDUE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  student Student?
  parent  Parent?
  teacher Teacher?

  @@map("users")
}

model Student {
  id       String @id @default(cuid())
  userId   String @unique
  rollNo   String @unique
  classId  String
  parentId String

  // Relations
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  class      Class        @relation(fields: [classId], references: [id])
  parent     Parent       @relation(fields: [parentId], references: [id])
  attendance Attendance[]
  fees       Fee[]
  results    Result[]

  @@map("students")
}

model Parent {
  id     String @id @default(cuid())
  userId String @unique

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  children Student[]

  @@map("parents")
}

model Teacher {
  id      String @id @default(cuid())
  userId  String @unique
  subjectId String?

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject Subject? @relation(fields: [subjectId], references: [id])
  classes Class[]

  @@map("teachers")
}

model Class {
  id        String   @id @default(cuid())
  name      String
  section   String
  createdAt DateTime @default(now())

  // Relations
  students  Student[]
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  teacherId String?
  homework  Homework[]
  subjects  ClassSubject[]

  @@unique([name, section])
  @@map("classes")
}

model Subject {
  id        String   @id @default(cuid())
  name      String   @unique
  code      String   @unique
  createdAt DateTime @default(now())

  // Relations
  teachers Teacher[]
  results  Result[]
  homework Homework[]
  classes  ClassSubject[]

  @@map("subjects")
}

model ClassSubject {
  id        String @id @default(cuid())
  classId   String
  subjectId String

  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([classId, subjectId])
  @@map("class_subjects")
}

model Attendance {
  id        String           @id @default(cuid())
  studentId String
  date      DateTime
  status    AttendanceStatus
  remarks   String?
  createdAt DateTime         @default(now())

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, date])
  @@map("attendance")
}

model Fee {
  id          String    @id @default(cuid())
  studentId   String
  amount      Float
  dueDate     DateTime
  paidDate    DateTime?
  status      FeeStatus @default(PENDING)
  description String?
  fineAmount  Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("fees")
}

model Result {
  id         String   @id @default(cuid())
  studentId  String
  subjectId  String
  examName   String
  marks      Float
  maxMarks   Float
  examDate   DateTime
  remarks    String?
  createdAt  DateTime @default(now())

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  @@map("results")
}

model Homework {
  id          String   @id @default(cuid())
  classId     String
  subjectId   String
  title       String
  description String
  dueDate     DateTime
  fileUrl     String?
  createdAt   DateTime @default(now())

  // Relations
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  @@map("homework")
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  targetRole Role?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("announcements")
}
